<UserControl x:Class="RemoteDesktop.Views.UserControls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:bh="clr-namespace:RemoteDesktop.Infrastructure.Behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <UserControl.Resources>
      <Style x:Key="SearchBarStyle" TargetType="Border">
         <Setter Property="BorderThickness" Value="1" />
         <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
         <Setter Property="Background" Value="Transparent" />
         <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
               <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            </Trigger>
            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
               <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            </DataTrigger>
         </Style.Triggers>
      </Style>
   </UserControl.Resources>
   <Grid>
      <Border Style="{StaticResource SearchBarStyle}">
         <Grid Margin="3">
            <Grid.ColumnDefinitions>
               <ColumnDefinition />
               <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox bh:TextBoxHelper.Placeholder="Search..." Grid.Column="0" BorderThickness="0" Padding="4,2" />

            <TextBlock Grid.Column="1" Foreground="{DynamicResource TextInactiveForeground}" FontFamily="{StaticResource FontIcon}" Text="&#xE721;" FontSize="14" VerticalAlignment="Center" />
         </Grid>
      </Border>
   </Grid>
</UserControl>