<UserControl x:Class="RemoteDesktop.Views.Regions.MenuNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <UserControl.Resources>
      <Style x:Key="SeparatorStyle" TargetType="Separator" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}">
         <Setter Property="Background" Value="{DynamicResource SeparatorBrush}" />
      </Style>
   </UserControl.Resources>

   <Menu Background="Transparent">
      <MenuItem Header="Connect" Icon="&#xE8AF;" Command="{Binding ConnectCommand}" />

      <Separator Style="{StaticResource SeparatorStyle}" />

      <MenuItem Header="Manage" Icon="&#xED25;">
         <MenuItem Header="Create" Icon="&#xE710;">
            <MenuItem Header="New Group" Icon="&#xE8F4;" />
            <MenuItem Header="New Server" Command="{Binding CreateServerCommand}" Icon="&#xE836;" />
         </MenuItem>

         <Separator Style="{StaticResource SeparatorStyle}" />

         <MenuItem Header="Edit" Command="{Binding EditSelectedTreeItemCommand}" Icon="&#xE70F;" />
         <MenuItem Header="Delete" Icon="&#xE74D;" Command="{Binding DeleteSelectedTreeItemCommand}" />
      </MenuItem>
   </Menu>
</UserControl>