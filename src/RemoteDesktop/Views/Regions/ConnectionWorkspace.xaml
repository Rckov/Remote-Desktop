<UserControl x:Class="RemoteDesktop.Views.Regions.ConnectionWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:ad="https://github.com/Dirkster99/AvalonDock"

             xmlns:vm="clr-namespace:RemoteDesktop.ViewModels">

   <ad:DockingManager Grid.Column="2" DocumentsSource="{Binding ConnectedServers}">
      <ad:DockingManager.Resources>
         <DataTemplate DataType="{x:Type vm:ConnectedServerViewModel}">
            <TextBlock Text="123" />
         </DataTemplate>
      </ad:DockingManager.Resources>

      <ad:LayoutRoot>
         <ad:LayoutPanel Orientation="Horizontal">
            <ad:LayoutDocumentPane>
               <ad:LayoutDocument>
                  <StackPanel x:Name="Welcome" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                     <TextBlock Text="&#xE703;" Margin="0,0,7,0" FontSize="60" VerticalAlignment="Center" FontFamily="{StaticResource FontIcon}" />
                     <StackPanel TextBlock.FontSize="24" TextBlock.FontWeight="Bold">
                        <TextBlock Text="Welcome to" />
                        <TextBlock Text="Remote Desktop" />
                     </StackPanel>
                  </StackPanel>
               </ad:LayoutDocument>
               <ad:LayoutDocument>
                  <StackPanel x:Name="Welcome2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                     <TextBlock Text="&#xE703;" Margin="0,0,7,0" FontSize="60" VerticalAlignment="Center" FontFamily="{StaticResource FontIcon}" />
                     <StackPanel TextBlock.FontSize="24" TextBlock.FontWeight="Bold">
                        <TextBlock Text="Welcome to" />
                        <TextBlock Text="Remote Desktop" />
                     </StackPanel>
                  </StackPanel>
               </ad:LayoutDocument>
            </ad:LayoutDocumentPane>
         </ad:LayoutPanel>
      </ad:LayoutRoot>
   </ad:DockingManager>
</UserControl>