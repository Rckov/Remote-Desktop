<Window x:Class="RemoteDesktop.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:regions="clr-namespace:RemoteDesktop.Views.Regions"
        xmlns:controls="clr-namespace:RemoteDesktop.Views.UserControls"
        Height="650"
        Width="1200"
        Title="Remote Desktop"

        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}">

   <Border Style="{StaticResource BorderWindowStyle}">
      <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
         </Grid.RowDefinitions>

         <controls:WindowBar Background="{DynamicResource ContentBackgroundBrush}" Effect="{DynamicResource DropShadowEffect}">
            <controls:WindowBar.LeftContent>
               <regions:MenuNavigation Margin="5,0,0,0" />
            </controls:WindowBar.LeftContent>

            <controls:WindowBar.RightContent>
               <Button Content="&#xE708;" Style="{StaticResource WindowButtonStyle}" Command="{Binding ChangeThemeCommand}" />
            </controls:WindowBar.RightContent>
         </controls:WindowBar>

         <Border Padding="5" Grid.Row="1">
            <Grid>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="250" MinWidth="250" MaxWidth="500" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
               </Grid.ColumnDefinitions>

               <GridSplitter Grid.Column="1"
                             Width="2" Margin="2,0"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Center"
                             Background="Transparent" />

               <regions:ServerExplorerWorkspace Grid.Column="0" />
               <regions:ConnectionWorkspace Grid.Column="2" />
            </Grid>
         </Border>
      </Grid>
   </Border>
</Window>