<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <SolidColorBrush x:Key="BackgroundBrush" Color="#F2F2F2" />
   <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFF" />
   <SolidColorBrush x:Key="ContentInactiveBackgroundBrush" Color="#FCFCFC" />

   <SolidColorBrush x:Key="TextBrush" Color="#242424" />
   <SolidColorBrush x:Key="TextBrush2" Color="#606060" />
   <SolidColorBrush x:Key="TextDisabledBrush" Color="#808080" />

   <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F0F0F0" />
   <SolidColorBrush x:Key="ButtonPressedBrush" Color="#D8D8D8" />

   <SolidColorBrush x:Key="GripBrush" Color="#AAAAAA" />
   <SolidColorBrush x:Key="SeparatorBrush" Color="#E8E8E8" />
   <SolidColorBrush x:Key="BorderBrush" Color="#E8E8E8" />

   <SolidColorBrush x:Key="PrimaryBrush" Color="#326CF3" />
   <SolidColorBrush x:Key="InfoBrush" Color="#007ACC" />
   <SolidColorBrush x:Key="SuccessBrush" Color="#0DBD0D" />
   <SolidColorBrush x:Key="ErrorBrush" Color="#F14C4C" />
   <SolidColorBrush x:Key="WarningBrush" Color="#FFCC00" />

   <SolidColorBrush x:Key="CaretBrush" Color="#AAAAAA" />
   <SolidColorBrush x:Key="SelectContentBrush" Color="#70F2F2F2" />

   <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="0.5" Opacity="0.04" />
</ResourceDictionary>