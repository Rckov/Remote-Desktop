<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <SolidColorBrush x:Key="BackgroundBrush" Color="#141414" />
   <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#1F1F1F" />

   <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0" />
   <SolidColorBrush x:Key="TextBrush2" Color="#909090" />
   <SolidColorBrush x:Key="TextDisabledBrush" Color="#606060" />

   <SolidColorBrush x:Key="ButtonHoverBrush" Color="#303030" />
   <SolidColorBrush x:Key="ButtonPressedBrush" Color="#3A3A3A" />

   <SolidColorBrush x:Key="GripBrush" Color="#444444" />
   <SolidColorBrush x:Key="SeparatorBrush" Color="#444444" />
   <SolidColorBrush x:Key="BorderBrush" Color="#333333" />

   <SolidColorBrush x:Key="PrimaryBrush" Color="#326CF3" />
   <SolidColorBrush x:Key="InfoBrush" Color="#007ACC" />
   <SolidColorBrush x:Key="SuccessBrush" Color="#0DBD0D" />
   <SolidColorBrush x:Key="ErrorBrush" Color="#F14C4C" />
   <SolidColorBrush x:Key="WarningBrush" Color="#FFCC00" />

   <SolidColorBrush x:Key="CaretBrush" Color="#E0E0E0" />
   <SolidColorBrush x:Key="SelectContentBrush" Color="#90303030" />

   <DropShadowEffect x:Key="DropShadowEffect1" ShadowDepth="2" Opacity="0.15" BlurRadius="6" />
</ResourceDictionary>