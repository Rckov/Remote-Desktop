<Application x:Class="RemoteDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cv="clr-namespace:RemoteDesktop.Infrastructure.ValueConverters"
             StartupUri="Views/Windows/MainWindow.xaml">
   <Application.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/Views/Styles/Generic.xaml" />
            <ResourceDictionary Source="/Views/Styles/AvalonDock.xaml" />

            <ResourceDictionary Source="/Resources/Themes/LightBrushes.xaml" />
         </ResourceDictionary.MergedDictionaries>

         <cv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
      </ResourceDictionary>
   </Application.Resources>
</Application>