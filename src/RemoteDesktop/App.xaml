<Application x:Class="RemoteDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Dark">
                    <hc:ThemeResources.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark" hc:ThemeDictionary.Key="Dark">
                            <SolidColorBrush x:Key="RegionBrush" Color="#242526" />
                            <SolidColorBrush x:Key="SecondaryRegionBrush" Color="#18191a" />
                            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#e4e6eb" />
                        </ResourceDictionary>
                    </hc:ThemeResources.ThemeDictionaries>
                </hc:ThemeResources>
                <hc:Theme />

                <ResourceDictionary Source="/Resources/Styles/Generic.xaml" />
                <ResourceDictionary Source="/Resources/Styles/AvalonDock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>